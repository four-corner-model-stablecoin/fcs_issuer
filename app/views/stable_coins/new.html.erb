<h2>
  ステーブルコイン発行
</h2>

<div>
  <div>
    ステーブルコイン残高
  </div>
  <div>
    <%= number_to_currency(current_user.wallet.balance, precision: 0) %>
  </div>
</div>

<%= form_with scope: :stable_coin, url: stable_coins_path do |form| %>
  <div>
    <%= form.number_field :amount, placeholder: "amount", required: true %>
    <%= form.submit "Issue" %>
  </div>
<% end %>
